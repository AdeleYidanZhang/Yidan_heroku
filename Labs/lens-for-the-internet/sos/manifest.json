{
    "manifest_version": 2,
    "name": "Word Lookup",
    "description": "Look up for definition of a word.",
    "version": "0.1",
    "icons":{
        "16":"icon.png",
        "48":"icon.png",
        "128":"icon.png"
    },
    "page_action":{
        "default_icon":{
            "16":"icon.png",
            "48":"icon.png",
            "128":"icon.png"
        },
        "default_title":"Word lookup",
        "default_popup":"popup.html"
    },
    "content_scripts": [
        {
          "matches": ["<all_urls>"],
          "css": ["content-script.css"],
          "js": ["content-script.js"]
        }
      ],
      "permissions": [
        "activeTab"
      ]
}